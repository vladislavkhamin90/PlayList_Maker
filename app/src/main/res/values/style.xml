<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
<!--        <item name="android:fontFamily">YS Display</item>-->
    </style>

    <style name="white_theme_button">
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/_16dp</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="android:layout_weight">3</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
<!--        <item name="android:fontFamily">YS Display</item>-->
    </style>

    <style name="dark_theme_button">
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/_16dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/_8dp</item>
        <item name="android:layout_weight">3</item>
        <item name="iconTint">@color/dark_theme</item>
        <item name="android:textColor">@color/dark_theme</item>
<!--        <item name="android:fontFamily">YS Display</item>-->
    </style>

    <style name="white_theme_settings_text">
        <item name="android:paddingStart">@dimen/_16dp</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:paddingEnd">@dimen/_16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="dark_theme_settings_text">
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="icon_pos">
        <item name="android:layout_marginRight">@dimen/_12dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
