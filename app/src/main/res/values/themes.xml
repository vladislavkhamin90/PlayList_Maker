<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Prime_theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/white_theme</item>
    </style>

    <style name="Prime_settings" parent="Prime_theme">
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="search_button" parent="button_style">
        <item name="icon">@drawable/search_icon</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="media_button" parent="button_style">
        <item name="icon">@drawable/media_icon</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="settings_button" parent="button_style">
        <item name="icon">@drawable/settings_icon</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="settings_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:paddingEnd">@dimen/_16dp</item>
        <item name="android:textColor">@color/dark_theme</item>
    </style>


</resources>